    <body>
        <h1>Login</h1>
        
        <div class="box_login">
            <p class ="subjudul">login with your registered account</p>
            <form action="/user/login" method="POST">
            
                <label for "email">Email</label>
                <input type="text" id = "email" name="email" required class="form_login">
            
                <label for "password">Password</label>
                <input type="password" id = "password" name="password" required class="form_login">
            
                <a href="/user/masuk">
                    <button type="submit">Login</button>
                </a> 
                <br></br>
                               
                <p>Don't have an account yet?</p>                
                <a class=link href="/user/daftar/">Register</a>
                <a class=link href="/">Back to Menu!</a>
                <br></br>                
                
                
            </form>
        </div>

    </body>
